<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.filmee.myapp.mapper.LiketoMapper">

    <insert id="likeInsert">
        <![CDATA[ 
            INSERT INTO liketo(user_id, bno) 
            VALUES(#{user_id},#{bno})
        ]]>
    </insert>


    <delete id="unlike">
        <![CDATA[ 
            DELETE FROM liketo
            WHERE bno=#{bno}
            AND user_id=#{user_id}
        ]]>
    </delete>

    <select id="likeCount" resultType="int">
        SELECT COUNT(bno)
        FROM liketo
        WHERE bno=#{bno}
    </select>
    
</mapper>